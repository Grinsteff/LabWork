<Window x:Class="LabWork.View.EditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork.View"
        mc:Ignorable="d"
        Title="EditProduct" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0" Width="300" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Имя товара"/>
            <TextBox Text=""/>
            <TextBlock Text="Цена товара"/>
            <TextBox Text=""/>
            <TextBlock Text="Описание товара"/>
            <TextBox Text="" Height="50"/>
        </StackPanel>
        <Button x:Name="SaveEdit_btn" Content="Сохранить изменения" Grid.Row="1" HorizontalAlignment="Left" FontSize="20" Width="240"/>
        <Button x:Name="CancelEdit_btn" Content="Отмена" Grid.Row="1" HorizontalAlignment="Right" FontSize="20" Width="240" />

    </Grid>
</Window>
